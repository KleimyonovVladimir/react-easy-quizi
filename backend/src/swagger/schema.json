{
  "openapi": "3.0.0",
  "info": {
    "title": "Easy-Quizi API",
    "description": "API definition",
    "termsOfService": "http://swagger.io/terms/",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "User",
      "description": "Operations about user"
    },
    {
      "name": "Quiz",
      "description": "Operations about quiz"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logs user into the system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UsrLoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["User"],
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "tags": ["User"],
        "summary": "Create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/quizzes": {
      "get": {
        "tags": ["Quiz"],
        "summary": "Get all quizzes",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuizResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/quizzes/create": {
      "post": {
        "tags": ["Quiz"],
        "summary": "Create new quiz",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QuizBase"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QuizResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["fullName", "email", "password", "status"],
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" },
          "fullName": { "type": "string" },
          "status": { "type": "string" }
        },
        "example": {
          "fullName": "Obi Wan Kenobi",
          "email": "ObiWanKenobi@easy-quizi.com",
          "status": "teacher",
          "password": "123456"
        }
      },
      "UsrLoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "example": {
          "email": "ObiWanKenobi@easy-quizi.com",
          "password": "123456"
        }
      },
      "QuestionBase": {
        "type": "object",
        "properties": {
          "question": {
            "type": "object",
            "properties": {
              "question": { "type": "string" },
              "answers": {
                "type": "object",
                "additionalProperties": {}
              },
              "rightAnswers": { "type": "array", "items": { "type": "string" } }
            }
          }
        }
      },
      "Question": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "uid": { "type": "string" }
            }
          },
          { "$ref": "#/components/schemas/QuestionBase" }
        ]
      },
      "QuizBase": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "time": { "type": "string" },
          "questions": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/QuestionBase" }
          }
        }
      },
      "QuizResponse": {
        "allOf": [
          {
            "type": "object",
            "properties": {
              "uid": { "type": "string" },
              "createdBy": { "type": "string" }
            }
          },
          { "$ref": "#/components/schemas/QuizBase" }
        ]
      }
    }
  }
}
