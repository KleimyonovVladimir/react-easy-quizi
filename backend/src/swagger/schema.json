{
  "openapi": "3.0.0",
  "info": {
    "title": "Easy-Quizi API",
    "description": "API definition",
    "termsOfService": "http://swagger.io/terms/",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "User",
      "description": "Operations about user"
    },
    {
      "name": "Quiz",
      "description": "Operations about quiz"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logs user into the system",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Logout user from the system",
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["User"],
        "summary": "Get all users",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer" } },
          { "in": "query", "name": "pageSize", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": { "type": "number" },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/User"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["User"],
        "summary": "Get user by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/users/create": {
      "post": {
        "tags": ["User"],
        "summary": "Create new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/quizzes": {
      "get": {
        "tags": ["Quiz"],
        "summary": "Get all quizzes",
        "parameters": [
          { "in": "query", "name": "page", "schema": { "type": "integer" } },
          { "in": "query", "name": "pageSize", "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": { "type": "number" },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Quiz"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/quizzes/create": {
      "post": {
        "tags": ["Quiz"],
        "summary": "Create new quiz",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateQuiz"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Quiz"
                }
              }
            }
          }
        }
      }
    },
    "/quizzes/details/{id}": {
      "get": {
        "tags": ["Quiz"],
        "summary": "Get quiz details",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QuizDetails"
                }
              }
            }
          }
        }
      }
    },
    "/quizzes/delete/{id}": {
      "delete": {
        "tags": ["Quiz"],
        "summary": "Delete quiz by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/quizzes/results": {
      "post": {
        "tags": ["Quiz"],
        "summary": "Get results",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResultRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Result"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/quizzes/result/send": {
      "post": {
        "tags": ["Quiz"],
        "summary": "Send result",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Quiz"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Result"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["uid", "fullName", "email", "status"],
        "properties": {
          "uid": { "type": "string" },
          "email": { "type": "string" },
          "fullName": { "type": "string" },
          "status": { "type": "string" }
        },
        "example": {
          "uid": "5f424125-3786-4569-a348-ffa4da7d96fc",
          "fullName": "Obi Wan Kenobi",
          "email": "ObiWanKenobi@easy-quizi.com",
          "status": "teacher"
        }
      },
      "UserCreate": {
        "allOf": [
          { "$ref": "#/components/schemas/User" },
          {
            "type": "object",
            "required": ["password"],
            "properties": {
              "password": { "type": "string" }
            },
            "example": {
              "fullName": "Obi Wan Kenobi",
              "email": "ObiWanKenobi@easy-quizi.com",
              "status": "teacher",
              "password": "123456"
            }
          }
        ]
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "example": {
          "email": "ObiWanKenobi@easy-quizi.com",
          "password": "123456"
        }
      },
      "Question": {
        "type": "object",
        "required": ["question", "answers", "rightAnswers"],
        "properties": {
          "uid": { "type": "string" },
          "question": { "type": "string" },
          "answers": {
            "type": "object",
            "additionalProperties": {}
          },
          "rightAnswers": { "type": "array", "items": { "type": "string" } }
        }
      },
      "Quiz": {
        "type": "object",
        "required": ["uid", "title", "createdBy", "questions"],
        "properties": {
          "uid": { "type": "string" },
          "title": { "type": "string" },
          "createdById": { "type": "string" },
          "createdBy": { "$ref": "#/components/schemas/User" },
          "questionsCount": { "type": "number" },
          "time": { "type": "string" }
        },
        "example": {
          "uid": "391030ee-ddc9-4e34-bc1d-513baa69cc65",
          "title": "Web developing UI/UX 1",
          "time": "25",
          "questionsCount": 2,
          "createdById": "29feeccf-88b3-43d8-8724-47719f7b25c5",
          "createdBy": {
            "uid": "29feeccf-88b3-43d8-8724-47719f7b25c5",
            "email": "admin@easy-quizi.com",
            "fullName": "Administrator",
            "status": "admin"
          }
        }
      },
      "CreateQuiz": {
        "type": "object",
        "required": ["title", "questions"],
        "properties": {
          "title": { "type": "string" },
          "time": { "type": "string" },
          "questions": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Question" }
          }
        },
        "example": {
          "title": "Web developing UI/UX 1",
          "time": "25",
          "questions": [
            {
              "question": "Why UI/UX so important?",
              "answers": {
                "0": "because",
                "1": "it is important",
                "2": "not important",
                "3": "I do not know"
              },
              "rightAnswers": [0, 1]
            },
            {
              "question": "Why are u gay?",
              "answers": {
                "0": "because",
                "1": "I am not gay"
              },
              "rightAnswers": [0]
            }
          ]
        }
      },

      "QuizDetails": {
        "allOf": [{ "$ref": "#/components/schemas/Quiz" }, { "$ref": "#/components/schemas/CreateQuiz" }]
      },
      "ResultRequest": {
        "type": "object",
        "properties": {
          "userUid": { "type": "string" },
          "quizUid": { "type": "string" }
        }
      },
      "Result": {
        "type": "object",
        "properties": {
          "uid": { "type": "string" },
          "score": { "type": "string" },
          "finishedAt": { "type": "string" },
          "user": {
            "type": "object",
            "properties": {
              "uid": { "type": "string" },
              "email": { "type": "string" },
              "fullName": { "type": "string" }
            }
          },
          "quiz": {
            "type": "object",
            "properties": {
              "uid": { "type": "string" },
              "title": { "type": "string" },
              "createdBy": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
